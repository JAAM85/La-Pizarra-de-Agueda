<% content_for :title do %><%=@tema.titulo%><% end %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4"><%=@tema.titulo%></h1>
  <p class="lead"><%=@tema.descripcion%></p><img class="img-fluid" src="/images/temas/<%=@tema.imagen%>" alt="Generic placeholder image" />
  
</div>

<!-- Three columns of text below the carousel -->
<p class="display-4" id="asignaturas">Actividades</p>
<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">	
	<div class="card-deck" style="padding-bottom:5px">
<%@actividades.each_with_index do |t, index|%>
  <div class="card">
    <img class="rounded" width="200" src="/images/actividades/<%=t.imagen%>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%=t.titulo%></h5>
      <p class="card-text"><%=t.descripcion%></p>  
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a target="_blank" class="btn btn-outline-success btn-sm" href="<%=t.link%>">Ir a la actividad</a>
          
        </div>
      </div>     
    </div>
  </div>
  
  <%if (index+1)%4 == 0%>
    </div>
    <div class="card-deck" style="padding-bottom:5px">
  <%end%>
<%end%>
</div>

