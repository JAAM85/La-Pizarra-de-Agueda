<% content_for :title do %><%=@tema.titulo%><% end %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4"><%=@tema.titulo%></h1>
  <p class="lead"><%=@tema.descripcion%></p><img class="img-fluid" src="/images/temas/<%=@tema.imagen%>" alt="Generic placeholder image" />
  
</div>

<!-- Three columns of text below the carousel -->
<p class="display-4" id="asignaturas">Actividades</p>
<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">	
	<div class="card-deck" style="padding-bottom:5px">
<%@actividades.each_with_index do |t, index|%>
   <div class="card">
    <img class="card-img-top" width="200" src="/images/actividades/<%=t.imagen%>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%=t.titulo%></h5>
      <p class="card-text"><%=sanitize t.descripcion%></p>  
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-id="<%=t.id%>" data-target="#exampleModalLong">
            Ver actividades
          </button>          
          <a class="btn btn-outline-info btn-sm" href="<%=actividad_path(t.id)%>">Saber m√°s</a>
        </div>
      </div>     
    </div>
  </div>
  
  <%if (index+1)%4 == 0%>
    </div>
    <div class="card-deck" style="padding-bottom:5px">
  <%end%>
<%end%>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Lista de actividades</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="links" class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<script>
$('#exampleModalLong').on('show.bs.modal', function (event) {

  var button = $(event.relatedTarget) // Button that triggered the modal
  var recipient = button.data('id') // Extract info from data-* attributes

  reload_links(recipient);
})
</script>

