<% content_for :title do %><%=@tema.titulo%><% end %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="<%=curso_path(Asignatura.find(@tema.asignatura).curso)%>"><%=Curso.find(Asignatura.find(@tema.asignatura).curso).name%></a></li>
    <li class="breadcrumb-item active" aria-current="page"><a href="<%=asignatura_path(@tema.asignatura)%>"><%=Asignatura.find(@tema.asignatura).name%></a></li>
    <li class="breadcrumb-item active" aria-current="page"><%=@tema.titulo%></li>
  </ol>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <img class="c-asignatura" src="/images/temas/<%=@tema.imagen%>" alt="Generic placeholder image" width="140" height="140">
    <h1 class="display-4"><%=@tema.titulo%></h1>
    <p class="lead"><%=@tema.descripcion%></p>    
  </div>
</div>

<!-- Three columns of text below the carousel -->
<p class="display-4" id="asignaturas">Actividades</p>
<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">	
	<%@actividades.each do |a|%>
    <div class="col-lg-4">
      <div class="card mb-4 shadow-sm">
      <div class="card-header">
            <h4 class="my-0 font-weight-normal"><img class="card-img-top img-fluid" src="/images/actividades/<%=a.imagen%>" alt="Generic placeholder image"></h4>
          </div>
        
        <div class="card-body">
          <h2><%= a.titulo %></h2>
          <p class="card-text"><%=a.descripcion%></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary">Ver actividad</button>
              <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
            </div>
          </div>
        </div>
      </div>
      </div>
  <%end%>
    </div>
  </div>
</div>


