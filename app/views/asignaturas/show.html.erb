<% content_for :title do %><%=@asignatura.name%> de <%=@curso.name%><% end %>

<%= render partial: '/asignaturas/partials/menuAdmin' %>


<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4"><img class="" src="/images/<%=@asignatura.image%>" alt="Generic placeholder image" width="200" height="auto"> <%=@asignatura.name%> de <a href="<%=curso_path(@curso.id)%>"><%=@curso.name%></a></h1>
  <p class="lead">Encuentra aqu√≠ todos los enlaces de las actividades o ejercicios complementarios para tu aprendizaje.</p>
</div>


<h1 class="display-4"><i class="material-icons md-48">class</i>Temas</h1>

<div class="card-deck" style="padding-bottom:5px">
<%@temas.each_with_index do |t, index|%>
  <div class="card">
    <img class="card-img-top" width="200" src="/images/temas/<%=t.imagen%>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%=t.titulo%></h5>
      <p class="card-text"><%=t.descripcion%></p>  
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a class="btn btn-outline-info btn-sm" href="<%=tema_path(t.id)%>">Ver actividades</a>
          <button type="button" class="btn btn-sm btn-outline-info">Edit</button>
        </div>
      </div>     
    </div>
  </div>
  
  <%if (index+1)%4 == 0%>
    </div>
    <div class="card-deck" style="padding-bottom:5px">
  <%end%>
<%end%>
</div>




