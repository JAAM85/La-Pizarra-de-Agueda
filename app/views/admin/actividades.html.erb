<h1 class="jumbotron-heading display-2">       
	Todas las actividades
</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">Titulo</th>
			<th scope="col">Descripcion</th>
			<th scope="col">Imagen</th>
			<th scope="col">Tema</th>
			<th scope="col">Curso</th>
			<th scope="col">Editar</th>
			<th scope="col">Eliminar</th>
		</tr>
	</thead>
	<tbody>

		<%@actividades.each do |t|%>
		<tr>
			<th scope="row"><%=t.titulo%></th>
			<td><%= t.descripcion%></td>
			<td><%= t.imagen%></td>
			<td><a href="<%=tema_path(t.tema)%>"><%= Tema.find(t.tema).titulo%></a></td>
			<td></td>
			<td>
					<button type="button" class="btn btn-primary" data-toggle="modal" data-id="<%=t.id%>" data-target="#exampleModal">
							Editar
					</button>
			</td>
			<td><a href="" ><button type="button" class="btn btn-outline-danger">Eliminar</button></a></td>
		</tr>
		<%end%>
	</tbody>
</table>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edici√≥n de tema</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="tema" class="modal-body">
        ...
      </div>      
    </div>
  </div>
</div>

<script>
$('#exampleModal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget) // Button that triggered the modal
  var recipient = button.data('id') // Extract info from data-* attributes

  edit_actividad(recipient);
})
</script>